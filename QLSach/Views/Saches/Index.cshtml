@model IEnumerable<QLSach.Models.Sach>

@{
    ViewBag.Title = "Index";
}

<h2>Quản lý Sách</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        
        <th>
            @Html.DisplayNameFor(model => model.TenSach)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NamXuatBan)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SoTrang)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TacGia.TenTacGia)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenSach)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NamXuatBan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoTrang)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TacGia.TenTacGia)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.MaSach.Trim() }) |
                @Html.ActionLink("Details", "Details", new { id = item.MaSach.Trim() }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.MaSach.Trim() })
            </td>
        </tr>
    }

</table>
